(
    name: "BookCitation",
    pattern: "⚘⊙⊳",
    template: "⚘⊙⊳⦑Author⦒⦑Year⦒⦑Title⦒",
    description: "Single or multi-author book citation",
    slots: [
        ("Author", "Person name(s). Multi-author: use ∧ conjunction (Author1∧Author2)"),
        ("Year", "Publication year (4 digits)"),
        ("Title", "Main title only, no subtitles"),
    ],
    examples: [
        "⚘⊙⊳⦑Thomas S. Kuhn⦒⦑1962⦒⦑The Structure of Scientific Revolutions⦒",
        "⚘⊙⊳⦑Michel Foucault⦒⦑1975⦒⦑Discipline and Punish⦒",
        "⚘⊙⊳⦑Edward Said⦒⦑1978⦒⦑Orientalism⦒",
        "⚘⊙⊳⦑George Lakoff∧Mark Johnson⦒⦑1980⦒⦑Metaphors We Live By⦒",
    ],
    constraints: [
        "Author names: no spaces between initials (J.L. Austin, not J. L. Austin)",
        "Title: main title only (A Matter of Justice, not A Matter of Justice: The Legal System)",
        "Multi-author: use ∧ between names, no spaces around ∧",
    ],
)
